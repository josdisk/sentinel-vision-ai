# Run mode
MODE=mock
ENABLE_VIDEO=true
ENABLE_AUDIO=false

# Auth
API_KEY=changeme
# Optional OIDC (JWT)
OIDC_ISSUER=
OIDC_AUDIENCE=
OIDC_JWKS_URL=

# Privacy & retention
RETENTION_MODE=none
BLUR_FACES=true

# Notifications
ENABLE_NOTIFICATIONS=true
# Slack Incoming Webhook (fallback)
SLACK_WEBHOOK=
# Slack Bot token & channel for threads (preferred)
SLACK_BOT_TOKEN=
SLACK_CHANNEL_ID=
# De-duplication / correlation windows (seconds)
ALERT_DEDUPE_SECONDS=60
ALERT_CORRELATE_SECONDS=60

# SMS
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM=
ALERT_SMS_TO=

# Metrics
PROMETHEUS_ENABLED=true

# Networking
API_HOST=0.0.0.0
API_PORT=8000
FRONTEND_URL=http://localhost:5173

# Storage
DATABASE_URL=postgresql://postgres:postgres@db:5432/sentinel

# HLS
ENABLE_HLS=true
HLS_OUTPUT_DIR=/app/hls

# S3 / MinIO for clips
S3_ENDPOINT_URL=http://minio:9000
S3_REGION=us-east-1
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=clips
S3_USE_SSL=false

# Alertmanager (optional Slack)
ALERTMANAGER_SLACK_WEBHOOK=
